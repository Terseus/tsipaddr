{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "types": [
            "node",
            "mocha"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}

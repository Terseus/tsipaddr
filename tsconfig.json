{
    "compilerOptions": {
        "strict": true,
        "target": "es3",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "types": [
            "node",
            "mocha"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "typedocOptions": {
        "target": "es5",
        "mode": "file",
        "out": "docs",
        "excludeExternals": true,
        "excludePrivate": true,
        "excludeNotExported": true
    }
}
